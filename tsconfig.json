{
  "compilerOptions": {
    "target": "es2015",
    "moduleResolution": "node",
    "module": "commonjs",
    "jsx": "react",
    "lib": [
      "es2017",
      "dom",
      "dom.iterable"
    ],

    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,

    "baseUrl": "./src/client",
    "outDir": "dist"
  },

  "include": [
    "**/*",
  ]
}
